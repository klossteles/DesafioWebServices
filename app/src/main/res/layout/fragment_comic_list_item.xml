<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/dimen_5dp"
    android:background="@color/color_dark_blue">

    <RelativeLayout
        android:id="@+id/rlComicListItemImage"
        android:background="@color/color_white"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/comicImage"
            android:layout_width="@dimen/dimen_150dp"
            android:layout_height="@dimen/dimen_200dp"
            android:contentDescription="@string/comic_image"
            android:padding="@dimen/dimen_5dp"
            android:scaleType="fitXY"
            tools:src="@drawable/comic_image" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txtComicNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlComicListItemImage"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="@dimen/dimen_10dp"
        tools:text="#96"
        android:textColor="@color/color_white"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>